@model IEnumerable<SstDCSA.Models.tbl_center>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">
    <i class="fas fa-university"></i>
    Stady Center
</h2>
<p>
    @Html.ActionLink("Create New Center", "Create", null, new { @class = "btn btn-info btn-outline-dark" })
</p>

<table class="text-center table table-striped table-hover ">
    <tr>
        <th>
            Serial No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.center_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.center_code)
        </th>
        <th>Action</th>
    </tr>
    @{ int i = 1; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            @{ i++; }
            <td>
                @Html.DisplayFor(modelItem => item.center_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.center_code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.center_code }, new { @class = "btn btn-outline-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.center_code }, new { @class = "btn btn-outline-secondary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.center_code }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
